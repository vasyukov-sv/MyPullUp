<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="home.my.mypullup.MainActivity">

    <!-- Login progress -->
    <!--android:visibility="gone"-->
    <!--This view is invisible, and it doesn't take any space for layout purposes.-->
    <ProgressBar
            android:id="@+id/save_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:baselineAligned="false">

                <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/morning1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/attempt1"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                    />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/morning2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/attempt2"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                    />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                    android:id="@+id/save_morning_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/action_save_result_morming"
                    android:textStyle="bold" android:textSize="12sp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:baselineAligned="false">

                <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/evening1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/attempt1"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                    />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/evening2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/attempt2"
                            android:inputType="number"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                    />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <Button
                    android:id="@+id/save_evening_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/action_save_result_evening"
                    android:textStyle="bold" android:textSize="12sp"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
